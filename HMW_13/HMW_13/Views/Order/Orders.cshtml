@model HMW_13.Models.OrderViewModel

@{
    ViewBag.Title = "Orders";
}

<h2>@ViewBag.Message</h2>

<div>
    @foreach (var item in ViewBag.ModelsList)
    {
    <form class="form-horizontal" action="OrderDetails">
        <h4>Customer: @item.Custmer</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                OrderStatus
            </dt>
            <dd>
                @item.OrderStatus
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd>
                @item.OrderDate;
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.OrderSum)
            </dt>
            <dd>
                @item.OrderSum;
            </dd>

        </dl>
        <input type="hidden" value="@item.OrderId" name="OrderId" />
        <input type="hidden" value="@item.Custmer" name="Custmer" />
        <input type="hidden" value="@item.OrderStatus" name="OrderStatus" />
        <input type="hidden" value="@item.OrderDate" name="OrderDate" />
        <input type="hidden" value="@item.OrderSum" name="OrderSum" />
        <input class="btn" type="submit" value="Order details" />
    </form> 
    }
</div>
